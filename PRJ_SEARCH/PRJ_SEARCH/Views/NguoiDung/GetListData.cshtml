@using CLSHelper.HtmlHelpers
@model NguoiDungEntities.lstData
<!-- table-responsive -->
<!--Chỉnh sửa CSS phân trang-->
<style>
    #DataTables_Table_0_paginate ul li {
        float: left;
        margin: 0 5px;
        background-color: #2983f5;
        border-radius: 3px;
        text-align: center;
        width: 34px;
        height: 37px;
        padding-top: 7px;
    }

        #DataTables_Table_0_paginate ul li a {
            color: #fff;
            background-color: #884ffb00 !important;
        }

        #DataTables_Table_0_paginate ul :hover {
            color: #fff;
            background-color: #808080 !important;
        }

    .no-padding {
        padding: 0
    }

    .table > thead > tr > th {
        background: #2983f5;
        color: #fff;
    }
</style>
<div class="table-responsive">
    <table class="table table-hover table-bordered" id="tblNguoiDung">
        <thead>
            <tr>
                <th scope="col" style="text-align:center">STT</th>
                <th scope="col" >Tên đăng nhập</th>
                <th scope="col">Họ tên</th>
                <th scope="col" style="text-align:center">Số điện thoại</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col" style="text-align:center">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0; }
            @foreach (var item in Model.lstDoc)
            {
                i++;
            <tr>
                <td style="text-align:center">@i</td>
                <th>@item.TenDangNhap<span class="tb_date">@item.Email</span></th>
                <td>@item.HoTen</td>
                <td style="text-align:center">@item.SoDienThoai</td>
                <td>@item.DiaChi</td>
                <td style="text-align:center">
                    <a class="btn btn-action" style="padding:6px 6px" title="Sửa" onclick="ShowModalAddEdit(@item.ID)">
                        <span class="fa fa-edit"></span>
                    </a>
                    <a class="btn btn-action" style="padding:4px 4px" title="Xóa" onclick="confirmDialog('Bạn có chắc chắn muốn xóa bản ghi này?', 'deleteOne(@item.ID)')">
                        <span class="fa fa-trash"></span>
                    </a>
                    
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.PagingInfo.ItemsPerPage < Model.PagingInfo.TotalItems)
{
    <div class="box-footer clearfix text-right" style="margin-bottom:20px; float:right; padding-right:20px" id="DataTables_Table_0_paginate">
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("GetListData", "NguoiDung", new { page = x }))
    </div>}
