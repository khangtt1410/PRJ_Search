    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">

        <!-- ============================================================== -->
        <!-- Top header  -->
        <!-- ============================================================== -->
        <!-- Start Navigation -->
        <div class="header header-transparent change-logo">
            <div class="container">
                <nav id="navigation" class="navigation navigation-landscape">
                    <div class="nav-header">
                        <a class="nav-brand static-logo" href="/TrangChu/Index"><img src="~/Content/img/logo-light.png" class="logo" alt="" /></a>
                        <a class="nav-brand fixed-logo" href="/TrangChu/Index"><img src="~/Content/img/logo.png" class="logo" alt="" /></a>
                        <div class="nav-toggle"></div>
                    </div>
                    <div class="nav-menus-wrapper" style="transition-property: none;">
                        <ul class="nav-menu">

                            @*<li class="active">
                                    <a href="/TrangChu/Index">Tra cứu<span class="submenu-indicator"></span></a>
                                </li>*@
                            @if (idNguoiDung != 0)
                            {
                                <li>
                                    <a href="/NguoiDung/Index">Người dùng<span class="submenu-indicator"></span></a>
                                </li>

                                <li>
